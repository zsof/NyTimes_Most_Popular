<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/titleDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="15dp"
        tools:text="@string/title_text_details"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/byDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:textAlignment="center"
        tools:text="@string/by_text_details"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="15dp"
        tools:text="2021.09.23"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/openDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_btn_details"
        android:layout_gravity="center"
        android:gravity="center" />

</LinearLayout>